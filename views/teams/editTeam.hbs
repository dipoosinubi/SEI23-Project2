<form method="POST" action="/teams/{{team._id}}?_method=PUT">

    <label for="name">Name</label>
    <input type="text" name="name" value="{{team.name}}"/>

    <label for="coach">Coach</label>
    <input type="text" name="coach" value="{{team.coach}}"/>

    <label for="stadium">Stadium</label>
    <input type="text"  name="stadium" value="{{team.stadium}}"/>

    <label for="trophies">Number of Trophies won</label>
    <input type="number" name="trophies" value="{{team.trophies}}">

     <input type="submit" value="Update Team" />
</form>
<form method="POST" action="/teams/{{team._id}}?_method=DELETE">
    <input type="submit" value="Delete Team" />
</form>